{
  "name": "lepton",
  "version": "1.1.1",
  "description": "Fundamental Javascript template",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node ./src/main.js",
    "test": "jest",
    "test:dev": "jest --watch",
    "prerelease": "standard-version ",
    "release": "git push --follow-tags origin main",
    "update": "ncu -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AtomicBuilders/lepton.git"
  },
  "keywords": [
    "javascript",
    "eslint",
    "prettier",
    "standard-version",
    "jest",
    "template"
  ],
  "author": {
    "name": "Alberto Basalo",
    "email": "albertobasalo@hotmail.com",
    "url": "https://twitter.com/albertobasalo"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AtomicBuilders/lepton/issues"
  },
  "homepage": "https://github.com/AtomicBuilders/lepton#readme",
  "devDependencies": {
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.4",
    "jest-esm-transformer": "^1.0.0",
    "npm-check-updates": "^11.7.1",
    "prettier": "^2.3.1",
    "standard-version": "^9.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "mjs"
    ],
    "transform": {
      "^.+\\.js$": "jest-esm-transformer"
    },
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "verbose": true
  }
}
